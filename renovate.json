{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>BlindfoldedSurgery/renovate-config",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "poetry",
        "uv"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "semanticCommitType": "feat"
    },
    {
      "matchDepNames": [
        "poetry",
        "uv"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchCategories": [
        "ci"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchCategories": [
        "ci"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "semanticCommitType": "fix!",
      "semanticCommitScope": null
    }
  ]
}
